generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Brand {
  id    Int    @id @default(autoincrement())
  name  String
  image String
  car   Car[]
}

enum MotorType {
  DIESEL
  ELETRIC
  GASOIL
  OTHER
}

enum AppointmentType {
  PENDING
  VALIDATE
  REJECTED
}

model Car {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  model       String
  price       Float
  color       String
  power       String
  placeNumber Int
  status      Boolean
  type        String
  motorType   MotorType
  brandId     Int
  brand       Brand     @relation(fields: [brandId], references: [id])
  image       Images[]
}

model Images {
  id    Int    @id @default(autoincrement())
  url   String
  carId Int
  car   Car[]
}

model Admin {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  urlImage String?
}

model Appointment {
  id              Int             @id @default(autoincrement())
  username        String
  firstname       String
  email           String
  contact         String
  appointmentDate DateTime        @default(now())
  status          AppointmentType @default(PENDING)
}
